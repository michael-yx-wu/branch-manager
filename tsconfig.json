{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "build",
        "removeComments": true,
        "strictNullChecks": true
    },
    "exclude": [
        "build",
        "dist",
        "node_modules"
    ]
}